pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the repository...'
                checkout scm
            }
        }
        stage('Install Node.js') {
            steps {
                echo 'Checking for Node.js and npm installation...'
                script {
                    def nodeInstalled = sh(script: 'node -v', returnStatus: true) == 0
                    def npmInstalled = sh(script: 'npm -v', returnStatus: true) == 0

                    if (!nodeInstalled || !npmInstalled) {
                        error('Node.js and npm are not installed. Please install them on the Jenkins agent.')
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    sh 'npm test'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                script {
                    // Replace the following lines with your deployment commands
                    sh 'heroku git:remote -a your-app-name'
                    sh 'git push heroku main'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Application deployed successfully.'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
